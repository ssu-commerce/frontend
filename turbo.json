{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint:fix": {},
    "format": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "cache": false,
      "inputs": ["tests/**/src/**/*.tsx", "tests/**/src/**/*.ts"]
    },
    "test:watch": {
      "cache": false
    }
  }
}
