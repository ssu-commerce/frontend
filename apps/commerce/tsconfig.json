{
  "extends": "tsconfig-sc/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "app/*": ["./app/*"],
      "component/*": ["./component/*"],
      "api/*": ["./api/*"],
      "provider/*": ["./provider/*"],
      "assets/*": ["./public/assets/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "global.d.ts",
    "styles.d.ts",
    "jest.config.js",
    "jest.setup.js"
  ],
  "exclude": ["node_modules"]
}
